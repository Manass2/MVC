@model List<PizzaViewModel>

<h4>@ViewData["Title"]</h4>
<ul style="list-style: none">
    @for (int i = 0; i < Model.Count; i++)
    {
        <li>
            <partial name="~/Views/Shared/Partials/_PizzaDetails.cshtml" for="@Model[i]" />
            <p><a asp-controller="Pizza" asp-action="Details" asp-route-id="@Model[i].Id">More Info</a></p>
        </li>
    }
</ul>



