@model ProductViewModel

<h2>Edit Product</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditproductPost" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-control">
                <label asp-for="Description"></label>
                <input asp-for="Description" required />
            </div>

            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select class="form-control" asp-for="Category" asp-items="Html.GetEnumSelectList<CategoryType>()"></select>
            </div>

            <div class="form-control">
                <label asp-for="Price"></label>
                <input asp-for="Price" required />
            </div>

            <button type="submit" class="btn btn-default">Update</button>
            <div>
                <a asp-action="Details" asp-controller="Product">Back</a>
            </div>
        </form>
    </div>

</div>
