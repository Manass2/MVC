@model List<PizzaViewModel>
@{
    ViewData["Title"] = "Index";
}

<h2>Menu</h2>
<h4>Pizzas</h4>

<a asp-controller="Pizza" asp-action="CreatePizza"> Add a new pizza to the menu </a>

@foreach (var pizza in Model)
{
<ul style="list-style-type: none;">
    <li>Pizza Name: @pizza.Name</li>
    <li>Pizza Price: @pizza.Price</li>
    <li><a asp-controller="Pizza" asp-action="Details" asp-route-id="@pizza.Id">See Details for Pizza</a></li>
    <li><a asp-controller="Pizza" asp-action="EditPizza" asp-route-id="@pizza.Id">Edit Pizza</a></li>
    <li><a asp-controller="Pizza" asp-action="DeletePizza" asp-route-id="@pizza.Id">Delete Pizza</a></li>
</ul>

}

<span>@ViewData["SharedMessage"]</span>



