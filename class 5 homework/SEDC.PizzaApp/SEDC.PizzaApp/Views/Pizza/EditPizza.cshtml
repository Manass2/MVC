@model PizzaViewModel

<h2> Make changes to the Pizza </h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPizzaPost" asp-controller="Pizza" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-control">
                <label asp-for="Name"></label>
                <input asp-for="Name" required />
            </div>
            <div class="form-control">
                <label asp-for="Price"></label>
                <input asp-for="Price" type="number" required />
            </div>
            <button type="submit" class="btn btn-default"> Save Changes </button>
            <a asp-controller="Pizza" asp-action="index">Cancel</a>
        </form>
    </div>
</div>